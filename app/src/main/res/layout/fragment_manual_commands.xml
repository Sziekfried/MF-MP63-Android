<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualCommands" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtMposName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:textColor="#03045E"
        android:layout_marginBottom="0dp"
        android:text="Estas conectado a:" />

    <TextView
        android:id="@+id/txtMposName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textColor="#90E0EF"
        android:textStyle="bold|italic"
        android:text="ningun dispositivo" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/txtMposName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txtMsgToMPOS"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:hint="escribe un mensaje"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSetMsgMPOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:minHeight="32dip"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="4dp"
                android:text="Mostrar mensaje"
                android:background="#00B4D8"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="2">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnInitCardComm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#03045E"
                    android:minHeight="32dip"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="4dp"
                    android:text="Iniciar comunicacion"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEndCardComm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#0077B6"
                    android:minHeight="32dip"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="4dp"
                    android:text="Terminar comunicacion"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txtCommandToMPOS"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:hint="escribe un comando en hex"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSetCommandMPOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:background="#00B4D8"
                android:minHeight="32dip"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="4dp"
                android:text="Enviar comando"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="2"
                android:text="respuesta: " />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtShowResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="2"
                android:lines="2"
                android:textStyle="italic"
                android:textColor="#03045E"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">
            <androidx.appcompat.widget.AppCompatTextView
                id="@+id/txtShowTagUID"
                android:layout_column="1"
                android:textStyle="italic"
                android:textColor="#03045E"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetTagUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:background="#0096C7"
                android:minHeight="32dip"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="4dp"
                android:text="Obtener UID"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>